<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.co_po_assessment.CourseAssignmentInputController">
    <children>
        <!-- Header Section -->
        <Label fx:id="headLabel" styleClass="header-label" text="Course Assignment Input">
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <!-- Input Form Section -->
        <VBox spacing="15.0">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>

            <!-- Course Selection -->
            <VBox spacing="5.0">
                <Label text="Course:" />
                <ComboBox fx:id="courseComboBox" maxWidth="1.7976931348623157E308" promptText="Select a course">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ComboBox>
            </VBox>

            <!-- Faculty Selection -->
            <VBox spacing="5.0">
                <Label text="Faculty Member:" />
                <ComboBox fx:id="facultyComboBox" maxWidth="1.7976931348623157E308" promptText="Select a faculty member">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ComboBox>
            </VBox>

            <!-- Academic Year Input -->
            <VBox spacing="5.0">
                <Label text="Academic Year:" />
                <TextField fx:id="academicYearTextField" promptText="e.g., 2024-2025">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
            <VBox />
            </VBox>
        </VBox>

        <!-- Button Section -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButton" text="Back" />
            <Button fx:id="confirmButton" defaultButton="true" mnemonicParsing="false" onAction="#onConfirmButton" styleClass="primary-button" text="Confirm" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
