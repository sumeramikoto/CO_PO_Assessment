<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" 
      fx:controller="org.example.co_po_assessment.faculty_input_controller.CourseSummaryController"
      spacing="20" style="-fx-background-color: #f5f7fa;" prefWidth="900" prefHeight="650">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="ðŸ“Š Course Summary" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
    </HBox>

    <!-- Course Info Card -->
    <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Course Information" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #334155;"/>
        <Separator/>
        <GridPane hgap="20" vgap="10">
            <Label text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="courseNameLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #1e293b; -fx-font-size: 14px;"/>
            
            <Label text="Programme:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="programmeLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #1e293b;"/>
            
            <Label text="Academic Year:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="academicYearLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #1e293b;"/>
            
            <Label text="Enrolled Students:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="enrolledStudentsLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </GridPane>
    </VBox>

    <!-- Assessment Overview Grid -->
    <GridPane hgap="16" vgap="16">
        <!-- Quiz 1 Card -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefWidth="200" prefHeight="130">
            <Label text="Quiz 1" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="quiz1QuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
            <Label fx:id="quiz1MarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="quiz1StatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- Quiz 2 Card -->
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefWidth="200" prefHeight="130">
            <Label text="Quiz 2" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="quiz2QuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
            <Label fx:id="quiz2MarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="quiz2StatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- Quiz 3 Card -->
        <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefWidth="200" prefHeight="130">
            <Label text="Quiz 3" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="quiz3QuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
            <Label fx:id="quiz3MarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="quiz3StatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- Quiz 4 Card -->
        <VBox GridPane.columnIndex="3" GridPane.rowIndex="0" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefWidth="200" prefHeight="130">
            <Label text="Quiz 4" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="quiz4QuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
            <Label fx:id="quiz4MarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="quiz4StatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- Mid Exam Card -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefHeight="130">
            <Label text="Mid Exam" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="midQuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #8b5cf6;"/>
            <Label fx:id="midMarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="midStatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- Final Exam Card -->
        <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="8" 
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" 
              prefHeight="130">
            <Label text="Final Exam" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <Label fx:id="finalQuestionsLabel" text="0 Questions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #8b5cf6;"/>
            <Label fx:id="finalMarksLabel" text="Total: 0 marks" style="-fx-text-fill: #64748b;"/>
            <Label fx:id="finalStatusLabel" text="âšª Not Setup" style="-fx-font-size: 12px;"/>
        </VBox>
    </GridPane>

    <!-- Overall Summary -->
    <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Overall Statistics" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #334155;"/>
        <Separator/>
        <HBox spacing="40">
            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="totalQuestionsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
                <Label text="Total Questions" style="-fx-text-fill: #64748b;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="totalMarksLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                <Label text="Total Marks" style="-fx-text-fill: #64748b;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="completionPercentageLabel" text="0%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f59e0b;"/>
                <Label text="Marks Entered" style="-fx-text-fill: #64748b;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Action Button -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#onRefresh" 
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="120" prefHeight="35"/>
        <Button fx:id="backButton" text="Back" onAction="#onBack" prefWidth="100" prefHeight="35"/>
    </HBox>
</VBox>
