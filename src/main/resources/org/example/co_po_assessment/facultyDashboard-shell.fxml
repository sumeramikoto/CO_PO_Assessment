<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tooltip?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="org.example.co_po_assessment.dashboard_controller.FacultyDashboardController" 
    stylesheets="@styles.css" style="-fx-background-color: #f5f7fa;">
    
    <!-- Top bar with title and breadcrumbs -->
    <top>
        <HBox spacing="20.0" styleClass="top-bar" alignment="CENTER_LEFT" prefHeight="70.0">
            <children>
                <Label fx:id="facultyLabel" text="Faculty Dashboard" styleClass="header-title" />
                <Label text="/" styleClass="breadcrumb-text" />
                <Label fx:id="breadcrumbLabel" text="Home" styleClass="breadcrumb-text" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButton" styleClass="button-danger" />
            </children>
            <padding>
                <Insets top="12" right="24" bottom="12" left="24" />
            </padding>
        </HBox>
    </top>

    <!-- Left navigation sidebar -->
    <left>
        <VBox spacing="8.0" styleClass="sidebar" prefWidth="260.0">
            <children>
                <VBox spacing="4" style="-fx-padding: 20 16 16 16;">
                    <Label text="CO-PO ASSESSMENT" style="-fx-text-fill: #64748b; -fx-font-size: 11px; -fx-font-weight: 700;" />
                    <Label text="Faculty Panel" style="-fx-text-fill: #1e293b; -fx-font-size: 18px; -fx-font-weight: 700;" />
                </VBox>
                
                <Label text="NAVIGATION" styleClass="sidebar-title" />
                <Button fx:id="backToCoursesButton" text="â—„ Back to Courses" 
                    onAction="#onBackToCoursesButton" styleClass="sidebar-button" maxWidth="Infinity" 
                    style="-fx-background-color: #eff6ff; -fx-text-fill: #3b82f6; -fx-font-weight: 700;" />
                <Button fx:id="questionsButton" text="ðŸ“  Course Questions" 
                    onAction="#onQuestionsButton" styleClass="sidebar-button" maxWidth="Infinity" />
                <Button fx:id="marksButton" text="âœï¸  Student Marks" 
                    onAction="#onMarksButton" styleClass="sidebar-button" maxWidth="Infinity" />
                
                <Label text="REPORTS" styleClass="sidebar-title" style="-fx-padding: 12 16 0 16;" />
                <Button fx:id="COReportButton" text="ðŸ“Š  CO Report" 
                    onAction="#onCOReportButton" styleClass="sidebar-button" maxWidth="Infinity" />
                <Button fx:id="POReportButton" text="ðŸ“ˆ  PO Report" 
                    onAction="#onPOReportButton" styleClass="sidebar-button" maxWidth="Infinity" />
                
                <Label text="IMPORT/EXPORT" styleClass="sidebar-title" style="-fx-padding: 12 16 0 16;" />
                <Button fx:id="excelExportButton" text="ðŸ“¤  Export Questions" 
                    onAction="#onExcelExportButton" wrapText="true" styleClass="sidebar-button" maxWidth="Infinity">
                    <tooltip>
                        <Tooltip text="Export Questions to Excel" />
                    </tooltip>
                </Button>
                <Button fx:id="excelImportButton" text="ðŸ“¥  Import Marks" 
                    onAction="#onExcelImportButton" styleClass="sidebar-button" maxWidth="Infinity" />
            </children>
            <padding>
                <Insets top="0" right="12" bottom="16" left="12" />
            </padding>
        </VBox>
    </left>

    <!-- Center content area becomes a swappable container -->
    <center>
        <VBox fx:id="centerContent" spacing="16.0" style="-fx-background-color: #f5f7fa;">
            <children>
                <!-- Default pane showing assigned courses; controller can restore this -->
                <VBox fx:id="coursesListPane" spacing="16.0" styleClass="card">
                    <children>
                        <Label fx:id="listLabel" text="Assigned Courses" styleClass="card-title" />
                        <TableView fx:id="assignedCoursesTableView">
                            <columns>
                                <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="120.0" />
                                <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="260.0" />
                                <TableColumn fx:id="academicYearColumn" text="Academic Year" prefWidth="140.0" />
                                <TableColumn fx:id="departmentColumn" text="Department" prefWidth="140.0" />
                                <TableColumn fx:id="programmeColumn" text="Programme" prefWidth="220.0" />
                            </columns>
                        </TableView>
                        <Label text="ðŸ’¡ Select a course from the table above, then use the sidebar to manage questions, marks, or view reports." 
                            styleClass="label-muted" style="-fx-font-size: 13px;" wrapText="true" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets top="24" right="24" bottom="24" left="24" />
            </padding>
        </VBox>
    </center>
</BorderPane>
