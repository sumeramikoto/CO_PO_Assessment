<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="org.example.co_po_assessment.admin_input_controller.FacultyInfoInputController"
    stylesheets="@styles.css" styleClass="card" spacing="20" prefWidth="550" style="-fx-background-color: #ffffff;">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40" />
    </padding>
    <children>
        <VBox spacing="8" alignment="CENTER">
            <Label fx:id="headLabel" text="Add Faculty Information" styleClass="section-title" />
            <Label text="Enter the details below to add a new faculty member" styleClass="label-muted" />
            <Separator prefWidth="200" />
        </VBox>
        
        <GridPane hgap="15" vgap="18" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="120" prefWidth="140" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>
                <Label text="Faculty ID:" style="-fx-font-weight: 600;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="idTextField" promptText="Enter faculty ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Full Name:" style="-fx-font-weight: 600;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="nameTextField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Shortname:" style="-fx-font-weight: 600;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="shortnameTextField" promptText="Enter shortname/initials" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Email:" style="-fx-font-weight: 600;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="emailTextField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Password:" style="-fx-font-weight: 600;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>
        
        <Separator />
        
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButton" 
                prefWidth="140" prefHeight="40" text="Cancel" />
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirmButton" 
                prefWidth="140" prefHeight="40" text="Add Faculty" styleClass="button-primary" />
        </HBox>
    </children>
</VBox>
