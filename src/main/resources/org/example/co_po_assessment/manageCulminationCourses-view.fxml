<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.co_po_assessment.admin_input_controller.ManageCulminationCoursesController">
    <top>
        <HBox spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <Label text="Programme:" />
                <ComboBox fx:id="programmeCombo" prefWidth="260.0" promptText="Select Programme" />
                <Button fx:id="refreshButton" onAction="#onRefreshProgrammes" text="Refresh" />
                <Label fx:id="statusLabel" text="" />
            </children>
        </HBox>
    </top>
    <center>
        <HBox spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Available Courses" />
                        <ListView fx:id="availableCoursesList" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button onAction="#onAddSelected" text="-&gt;" />
                        <Button onAction="#onRemoveSelected" text="&lt;-" />
                    </children>
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Culmination Courses" />
                        <ListView fx:id="selectedCoursesList" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <Button onAction="#onSave" text="Save" />
                <Button onAction="#onClose" text="Close" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
