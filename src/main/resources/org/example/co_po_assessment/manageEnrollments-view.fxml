<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="520" prefWidth="840" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.co_po_assessment.admin_input_controller.ManageEnrollmentsController">
    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <children>
                <Label style="-fx-font-size:20; -fx-font-weight:bold;" text="Manage Enrollments" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label text="Batch:" />
                        <ComboBox fx:id="batchFilterCombo" prefWidth="110" />
                        <Label text="Department:" />
                        <ComboBox fx:id="departmentFilterCombo" prefWidth="110" />
                        <Label text="Programme:" />
                        <ComboBox fx:id="programmeFilterCombo" prefWidth="110" />
                        <Button fx:id="refreshButton" onAction="#onRefresh" text="Refresh" />
                        <Button fx:id="clearFiltersButton" onAction="#onClearFilters" text="Clear Filters" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label text="Course:" />
                        <ComboBox fx:id="courseCombo" prefWidth="240" />
                        <Label text="Academic Year:" />
                        <ComboBox fx:id="academicYearCombo" prefWidth="140" />
                        <Button fx:id="enrollButton" onAction="#onEnrollSelected" text="Enroll Selected" />
                        <Button fx:id="unenrollButton" onAction="#onUnenrollSelected" text="Unenroll Selected" />
                        <Button fx:id="excelTemplateButton" onAction="#onExcelTemplateButton" text="Get Excel Template" />
                        <Button fx:id="importExcelButton" onAction="#onExcelImport" text="Import Excel Enrollments" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="studentTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="120" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="200" text="Name" />
                <TableColumn fx:id="batchColumn" prefWidth="70" text="Batch" />
                <TableColumn fx:id="departmentColumn" prefWidth="120" text="Department" />
                <TableColumn fx:id="programmeColumn" prefWidth="130" text="Programme" />
                <TableColumn fx:id="enrollmentStatusColumn" prefWidth="130" text="Enrollment Status" />
            </columns>
        </TableView>
    </center>
</BorderPane>
