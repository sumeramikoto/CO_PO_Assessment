<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="org.example.co_po_assessment.admin_input_controller.ManageFacultiesController"
    stylesheets="@styles.css" spacing="16" style="-fx-background-color: #f5f7fa;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <children>
        <Label text="Manage Faculties" styleClass="section-title" />
        
        <TextField fx:id="searchField" promptText="ðŸ” Search by Faculty ID or Name..." 
            style="-fx-font-size: 14px; -fx-pref-height: 40px;" />
        
        <TableView fx:id="facultyTableView" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="220" text="Name" />
                <TableColumn fx:id="shortnameColumn" prefWidth="140" text="Shortname" />
                <TableColumn fx:id="emailColumn" prefWidth="280" text="Email" />
            </columns>
        </TableView>
        
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Button fx:id="addFacultyButton" mnemonicParsing="false" onAction="#onAddFacultyButton" 
                text="Add Faculty" prefWidth="130" prefHeight="38" styleClass="button-primary" />
            <Button fx:id="excelTemplateButton" mnemonicParsing="false" onAction="#onExcelTemplateButton" 
                text="Get Excel Template" prefWidth="150" prefHeight="38" />
            <Button fx:id="bulkImportButton" mnemonicParsing="false" onAction="#onBulkImportFaculty" 
                text="Bulk Import (Excel)" prefWidth="160" prefHeight="38" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="removeFacultyButton" mnemonicParsing="false" onAction="#onRemoveFacultyButton" 
                text="Remove Faculty" prefWidth="140" prefHeight="38" styleClass="button-danger" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButton" 
                text="Go Back" prefWidth="100" prefHeight="38" />
        </HBox>
    </children>
</VBox>
