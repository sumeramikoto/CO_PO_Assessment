<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.co_po_assessment.admin_input_controller.ManageGraduatingStudentsController">
    <top>
        <HBox spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <Label text="Programme:" />
                <ComboBox fx:id="programmeCombo" prefWidth="200.0" promptText="Select Programme" />
                <Label text="Batch:" />
                <ComboBox fx:id="batchCombo" prefWidth="120.0" promptText="Select Batch" />
                <Button fx:id="refreshButton" onAction="#onRefreshProgrammes" text="Refresh" />
                <Label fx:id="statusLabel" text="" />
            </children>
        </HBox>
    </top>
    <center>
        <HBox spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Available Students" />
                        <ListView fx:id="availableStudentsList" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button onAction="#onAddSelected" text="-&gt;" />
                        <Button onAction="#onRemoveSelected" text="&lt;-" />
                    </children>
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Graduating Students" />
                        <ListView fx:id="selectedStudentsList" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <Button onAction="#onSave" text="Save" />
                <Button onAction="#onClose" text="Close" />
            </children>
        </HBox>
    </bottom>
</BorderPane>

